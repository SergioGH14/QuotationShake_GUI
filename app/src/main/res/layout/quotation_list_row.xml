<!--Custom layout to display a quotation in a ListView row-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Displays quotation text on the Top left of the ListView row-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvQuote"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/list_row_quotation_text_size" />

    <!--Displays quotation author on the right of the ListView row, just below the quotation text-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvAuthor"
        android:layout_below="@+id/tvQuote"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:textSize="@dimen/list_row_author_text_size"
        android:textStyle="italic"
        android:textColor="@color/colorAccent" />
</RelativeLayout>
